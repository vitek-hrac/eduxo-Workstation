nano /etc/network/interfaces

auto lo
iface lo inet loopback

iface ens192 inet manual

iface ztcyj3i4fm inet manual

auto vmbr0
iface vmbr0 inet static
        address 10.0.0.20/24
        gateway 10.0.0.254
        bridge-ports ens192
        bridge-stp off
        bridge-fd 0
        bridge-maxwait 0

auto vmbr1
iface vmbr1 inet static
        address 10.186.31.1/24
        bridge-ports ztcyj3i4fm
        bridge-stp off
        bridge-fd 0
        bridge-maxwait 3
        post-up   echo 1 > /proc/sys/net/ipv4/ip_forward
        post-up   iptables -t nat -A POSTROUTING -s '10.186.31.0/24' -o vmbr0 -j MASQUERADE
        post-down iptables -t nat -D POSTROUTING -s '10.186.31.0/24' -o vmbr0 -j MASQUERADE
